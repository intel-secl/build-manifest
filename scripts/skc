TARGETS = authservice certificate-management-service sgx-caching-service sgx-verification-service sgx-hvs sgx-ah
KBS_DEPENDENCIES = external-artifacts contrib common-java

all: $(TARGETS) kbs sgx_agent skc_library
	mkdir binaries
	cp authservice/out/*.bin binaries/
	cp certificate-management-service/out/*.bin binaries/
	cp sgx-caching-service/out/*.bin binaries/
	cp sgx-verification-service/out/*.bin binaries/
	cp sgx-hvs/out/*.bin binaries/
	cp sgx-ah/out/*.bin binaries/
	cp skc-tools/sgx_agent/build_scripts/sgx_agent.* binaries/
	cp skc-tools/sgx_agent/untar.sh binaries/agent_untar.sh
	cp skc-tools/skc_library/build_scripts/skc_library.* binaries/
	cp skc-tools/skc_library/untar.sh binaries/skclib_untar.sh

clean: $(patsubst %, %-clean, $(TARGETS))

kbs-%:
	cd $* && ant

kbs: $(patsubst %, kbs-%, $(KBS_DEPENDENCIES))
	cd key-broker-service && \
	ant ready clean -Dmtwilson3=true && \
	cd maven &&\
	mvn -DskipTests=true clean install -U && \
	cd ../features/ && \
	mvn clean -DskipTests=true -Ddependency.locations.enabled=false -Drelease -Dmtwilson3=true install -U && \
	cd ../packages/ && \
	mvn clean install -DskipTests=true -Dmtwilson3=true -U

sgx_agent:
	cd skc-tools/sgx_agent/build_scripts/ && sh sgxagent_build.sh
	
skc_library:
	cd skc-tools/skc_library/build_scripts/ && sh skc_library_build.sh
	
$(TARGETS):
	cd $@ && make installer

%-clean:
	cd $* && make clean

.PHONY: all clean kbs sgx_agent skc_library $(TARGETS)
